<h1>NEW FEEDBACK</h1>
<div class="row">
  <div class="span8 offset4">
<%= form_for(@feedbacks) do |f| %>
    <%= render 'error_messages', object: f.object %>
    <%= f.label :name %>
    <%= f.text_field :user_id %>

    <%= f.label :subject_name %><br />
    <%= f.collection_select(:subject_id, Subject.all, :id, :name ) %>
    <br>

    <%= f.label  :strenghts %>
    <%= f.text_area  :strenghts, size: '24x4' %>

    <%= f.label  :weaknesses %>
    <%= f.text_area  :weaknesses, size: '24x4' %>

    <%= f.label  :recommandation %>
    <%= f.text_area  :recommandation, size: '24x4' %>

    <%= f.label :rating %>
    <%= f.radio_button :rating, '1', :checked => true %> 1
    <%= f.radio_button :rating, '2', :checked => true %> 2
    <%= f.radio_button :rating, '3', :checked => true %> 3
    <%= f.radio_button :rating, '4', :checked => true %> 4
    <%= f.radio_button :rating, '5', :checked => true %> 5
    <br><br>
    <br>
    <br><br>

    <%= f.submit"Create ", class: "btn btn-large btn-primary"  %> 
<% end %>
  </div>
</div>